// Import sounds
import swipeSoundSrc from "@assets/Screen swipe sound effect (mp3cut.net).m4a";
import footstepSoundSrc from "@assets/footsteps sound effect - walking sound effect - copyright free sound effects (mp3cut.net) (1).m4a";

